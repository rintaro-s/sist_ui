#!/bin/bash

# Openbox自体の起動をデバッグするためのログ
LOG_FILE="/tmp/openbox_debug.log"
exec > $LOG_FILE 2>&1

echo "--- Openbox Session Start at $(date) ---"
echo "User: $(whoami)"
echo "DISPLAY: $DISPLAY"
echo "-------------------------------------"

# 【変更】--debug フラグを追加して、Openboxのデバッグモードを有効にする
exec openbox --debug --config-file ~/.config/openbox/rc.xml