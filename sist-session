#!/bin/bash

# Openbox自体の起動をデバッグするためのログ
LOG_FILE="/tmp/openbox_debug.log"
exec > $LOG_FILE 2>&1

echo "--- Openbox Session Start at $(date) ---"
echo "User: $(whoami)"
echo "DISPLAY: $DISPLAY"
echo "-------------------------------------"

# 【変更】設定ファイル(~/.config/openbox/rc.xml)を明示的に指定してOpenboxを起動
exec openbox --config-file ~/.config/openbox/rc.xml
